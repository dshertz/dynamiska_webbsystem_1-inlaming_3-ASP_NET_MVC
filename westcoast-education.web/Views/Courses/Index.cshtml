@{
    ViewData["Title"] = "Kurser";
}
@model IList<westcoast_education.web.Models.Course>

<section class="hero">
        <div>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>&lt;Kursnamn&gt;</th>
                        <th>&lt;Kurstitel&gt;</th>
                        <th>&lt;Kursnummer&gt;</th>
                        <th>&lt;Startdatum&gt;</th>
                        <th>&lt;Antal veckor&gt;</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@course.CourseName</td>
                            <td>@course.CourseTitle</td>
                            <td>@course.CourseNumber</td>
                            <td>@course.CourseStartDate.Year-@course.CourseStartDate.Month-@course.CourseStartDate.Day</td>
                            <td>@course.CourseLengthInWeeks</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tfoot>
            </table>
        </div>
</section>